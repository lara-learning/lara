{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "lib": ["ESNEXT", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "keyofStringsOnly": false
  },
  "references": [{ "path": "../components" }, { "path": "../api" }],
  "include": ["src/**/*"]
}
